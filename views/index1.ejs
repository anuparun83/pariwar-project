<section class="products" id="products">
    <h1 class="heading">exclusive <span>products</span></h1>

    <div class="filter-buttons">
        <div class="buttons active" data-filter="all">all</div>
        <div class="buttons" data-filter="arrivals">new arrivals</div>
        <div class="buttons" data-filter="featured">mens</div>
        <div class="buttons" data-filter="special">womens</div>
        <div class="buttons" data-filter="seller">kids</div>
    </div>

    <div class="box-container">
        <% products.forEach(function(product) { %>
        <div class="box" data-item="<%= product.category %>">
            <div class="icons">
                <form action="/cart" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="id" value="<%= product._id %>">
                    <button class=" HOVExtra " type="submit"><i  class=" fas fa-shopping-cart HOVExtra"></i></button>
                </form>
                <form action="/addToWishlist" method="post" >
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="id" value="<%= product._id %>">
                    <button type="submit" class="HOVExtra fas fa-heart"></button>
                </form>
                
                <a href="#" class="fas fa-search"></a>
                <a href="/product/<%= product._id %>" class="fas fa-eye"></a>
            </div>
            <div class="image">
                <img src="<%= product.imageUrl %>" alt="">
            </div>
            <div class="content">
                <h3><%= product.name %></h3>
                <div class="price">
                    <div class="amount">₹ <%=(product.price)-(product.price*(.22)).toFixed(0) %></div>
                    <div class="cut">₹<%= product.price %></div>
                    <div class="offer"><%= (Math.floor(Math.random() * 4) + 19)%>% off</div>
                </div>
                <div class="stars">
                    
                    <% for(var i =1; i <=(Math.floor(Math.random() * 2) + 3);  i++ ) { %>
                    <i class="bx bx-star"></i>
                    <% } %>
                    <i class=" bx bxs-star-half"></i>
                    <span>(<%= (Math.floor(Math.random() * 1900) + 700) %>)</span>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</section>

